#/usr/bin/bash -v

VERSION=`cat ../../.version`
DATE=`date "+%Y-%m-%d %H:%M"`
BUILD_NAME="Build $VERSION ($DATE)"
CHANGELOG=`git log --pretty=format:"%s"  --graph  --branches --not --remotes`

MESSAGE="$BUILD_NAME \
$CHANGELOG"

./deploy.html-pages "$MESSAGE"
./deploy.wiki "$MESSAGE"

cd ../

git commit -a -m "$MESSAGE"
git push

echo -e  "\r\n### $BUILD_NAME  \r\n\r\n$CHANGELOG" > tmp/last-build.log

cd tools/